# Brainstorm Environment Variables Example
# Copy this file to .env for local development
# For production, use /etc/brainstorm.conf

# Relay Configuration
BRAINSTORM_RELAY_URL=wss://your-relay-url.com
BRAINSTORM_RELAY_PUBKEY=your_relay_pubkey
BRAINSTORM_RELAY_PRIVKEY=your_relay_privkey
BRAINSTORM_RELAY_NSEC=your_relay_nsec
BRAINSTORM_RELAY_NPUB=your_relay_npub

# File Paths
BRAINSTORM_INPUT_FILE=/path/to/nip85.json
BRAINSTORM_KEYS_FILE=/path/to/brainstorm_relay_keys

# Processing Configuration
BRAINSTORM_BATCH_SIZE=100
BRAINSTORM_DELAY_BETWEEN_BATCHES=1000
BRAINSTORM_DELAY_BETWEEN_EVENTS=50
BRAINSTORM_MAX_RETRIES=3
BRAINSTORM_MAX_CONCURRENT_CONNECTIONS=5

# Control Panel Configuration
CONTROL_PANEL_PORT=7778

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password
