# Hasenpfeffr Environment Variables Example
# Copy this file to .env for local development
# For production, use /etc/hasenpfeffr.conf

# Relay Configuration
HASENPFEFFR_RELAY_URL=wss://your-relay-url.com
HASENPFEFFR_RELAY_PUBKEY=your_relay_pubkey
HASENPFEFFR_RELAY_NSEC=your_relay_nsec

# File Paths
HASENPFEFFR_INPUT_FILE=/path/to/nip85.json
HASENPFEFFR_KEYS_FILE=/path/to/hasenpfeffr_relay_keys

# Processing Configuration
HASENPFEFFR_BATCH_SIZE=100
HASENPFEFFR_DELAY_BETWEEN_BATCHES=1000
HASENPFEFFR_DELAY_BETWEEN_EVENTS=50
HASENPFEFFR_MAX_RETRIES=3
HASENPFEFFR_MAX_CONCURRENT_CONNECTIONS=5

# Control Panel Configuration
CONTROL_PANEL_PORT=7778

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password
