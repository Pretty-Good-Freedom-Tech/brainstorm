[Unit]
Description=Hasenpfeffr Control Panel
After=network.target neo4j.service

[Service]
Type=simple
User=hasenpfeffr
EnvironmentFile=/etc/hasenpfeffr.conf
ExecStart=/bin/bash -c '${HASENPFEFFR_NODE_BIN} /usr/local/lib/node_modules/hasenpfeffr/bin/control-panel.js'
Restart=always
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/usr/local/lib/node_modules/hasenpfeffr

[Install]
WantedBy=multi-user.target
