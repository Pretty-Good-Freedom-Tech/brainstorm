[Unit]
Description=Strfry to Neo4j Reconciliation
After=network.target neo4j.service

[Service]
Type=simple
User=hasenpfeffr
EnvironmentFile=/etc/hasenpfeffr.conf
ExecStart=/usr/bin/node /usr/local/lib/node_modules/hasenpfeffr/src/pipeline/reconcile/runFullReconciliation.sh
Restart=on-failure
RestartSec=30
# Set resource limits to prevent excessive resource usage
CPUQuota=70%
MemoryLimit=1G
# Add additional security measures
PrivateTmp=true

[Install]
WantedBy=multi-user.target